<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent" android:layout_width="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- TITLE -->
    <FrameLayout android:id="@+id/frameLayout1"
	android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingLeft="10dip" android:paddingRight="10dip" >
	
		<Button android:text="@string/button_refresh"
		android:layout_gravity="left|center_vertical"
		android:padding="8dip"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
		
		<TextView android:text="Your Name" android:layout_gravity="center"
		android:textSize="24sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
		
		<Button android:text="@string/button_newEvent"
		android:layout_gravity="right|center_vertical"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:padding="8dip"></Button>
	</FrameLayout>
	
	<!-- 現在のイベント -->
	<TextView android:text="現在のイベント" 
				android:textSize="14sp" android:background="#00b7ef" android:padding="10dip"
				android:layout_width="fill_parent" android:layout_height="wrap_content"/>
    <FrameLayout
	android:layout_width="fill_parent" android:layout_height="wrap_content" 
	android:background="#84ccc9" android:padding="10dip">
		<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
    		android:orientation="vertical" >
			<TextView android:text="インタン者集合！" 
				android:textSize="24sp" android:layout_gravity="center"
				android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		    <TextView android:text="時間：11月10日 　16：30 " 
				android:textSize="18sp"
				android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    		<TextView android:text="組織者：田中さん" 
				android:textSize="18sp"
				android:layout_width="wrap_content" android:layout_height="wrap_content"/>
			<TextView android:text="場所：マークシティ" 
				android:textSize="18sp"
				android:layout_width="fill_parent" android:layout_height="wrap_content"/>
    	</LinearLayout>
	
	<Button
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right|bottom"
	    style="@style/buttonA"
	    android:text="集合！" />
	</FrameLayout>

    <!-- イベントリスト -->
    <TextView android:text="イベントリスト" 
    		android:padding="10dip" android:layout_marginTop="10dip"
			android:textSize="14sp" android:background="#dddddd"
			android:layout_width="fill_parent" android:layout_height="wrap_content"/>
    
    <FrameLayout
	android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingLeft="10dip" android:paddingRight="10dip">
		<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
    		android:orientation="vertical" >
		    <TextView android:text="インタン者集合" 
				android:textSize="20sp"
				android:layout_width="fill_parent" android:layout_height="wrap_content"/>
		    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
    		android:orientation="horizontal" >
    			<TextView android:text="時間：11月10日 " 
				android:textSize="14sp"
				android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    			<TextView android:text="組織者：田中さん" 
				android:textSize="14sp"
				android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    		</LinearLayout>
			<TextView android:text="場所：マークシティ" 
				android:textSize="14sp"
				android:layout_width="fill_parent" android:layout_height="wrap_content"/>
    	</LinearLayout>
	<Button android:text="詳しく"
		android:layout_gravity="right|bottom"
		style="@style/buttonA"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	</FrameLayout>
	<View  android:layout_width="fill_parent"  android:layout_height="1dip" android:background="?android:attr/listDivider"  /> 
	
	<FrameLayout
	android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingLeft="10dip" android:paddingRight="10dip">
		<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
    		android:orientation="vertical" >
		    <TextView android:text="インタン者集合" 
				android:textSize="20sp"
				android:layout_width="fill_parent" android:layout_height="wrap_content"/>
		    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
    		android:orientation="horizontal" >
    			<TextView android:text="時間：11月10日 " 
				android:textSize="14sp"
				android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    			<TextView android:text="組織者：田中さん" 
				android:textSize="14sp"
				android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    		</LinearLayout>
			<TextView android:text="場所：マークシティ" 
				android:textSize="14sp"
				android:layout_width="fill_parent" android:layout_height="wrap_content"/>
    	</LinearLayout>
	<Button android:text="詳しく"
	    style="@style/buttonA"
		android:layout_gravity="right|bottom"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	</FrameLayout>
	<View  android:layout_width="fill_parent"  android:layout_height="1dip" android:background="?android:attr/listDivider"  /> 
</LinearLayout>
</ScrollView>