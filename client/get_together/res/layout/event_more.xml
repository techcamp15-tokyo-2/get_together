		    android:id="@+id/eventMore"
		    android:layout_width="match_parent" android:layout_height="match_parent"
		    android:padding="10dip"
    		android:orientation="vertical" >
    		<!-- 現在のイベント 内容 -->
			<TextView 
			    android:id="@+id/eventName"
			    android:text="インタン者集合！" 
				android:textSize="24sp" android:layout_gravity="center"
				android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		    <TextView 
		        android:id="@+id/eventTime"
		        android:text="時間：11月10日 　16：30 " 
		        android:layout_marginTop="5dip"
				android:textSize="18sp"
				android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    		<TextView
		        android:id="@+id/eventHostess" 
		        android:text="組織者：田中さん" 
				android:textSize="18sp"
				android:layout_width="wrap_content" android:layout_height="wrap_content"/>
			<TextView
			    android:id="@+id/eventAddress" 
			    android:text="場所：マークシティ" 
				android:textSize="18sp"
				android:layout_width="fill_parent" android:layout_height="wrap_content"/>
			<TextView android:text="参加者：" 
				android:textSize="18sp"
				android:layout_width="fill_parent" android:layout_height="wrap_content"/>
